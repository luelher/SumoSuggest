<div id="content" ng-controller="HomeController">

  <section>
    <div class="section-header">
      <ol class="breadcrumb">
        <li class="active">Keyworks Search</li>
      </ol>
    </div>
    <div class="section-body contain-lg">

      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body ">
              <form id="SearchForm" method="get" action="" class="form floating-label">
              <div id="rootwizard" class="form-wizard form-wizard-horizontal">
                  <div class="form-wizard-nav">
                    <div class="progress" style="width: 75%;"><div class="progress-bar progress-bar-primary" style="width: 0%;"></div></div>
                    <ul class="nav nav-justified nav-pills">
                      <li class="active"><a href="wizard.html#tab1" data-toggle="tab"><span class="step">1</span> <span class="title">LOCATION</span></a></li>
                      <li><a href="wizard.html#tab2" data-toggle="tab"><span class="step">2</span> <span class="title">CATEGORY</span></a></li>
                      <li><a href="wizard.html#tab3" data-toggle="tab"><span class="step">3</span> <span class="title">WORDS</span></a></li>
                      <li><a href="wizard.html#tab4" data-toggle="tab"><span class="step">4</span> <span class="title">RESULTS</span></a></li>
                    </ul>
                  </div><!--end .form-wizard-nav -->
                  <div class="tab-content clearfix">
                    <div class="tab-pane active" id="tab1">
                      <br><br>
                      <div class="form-group">
                          <div class="col-lg-3"></div>
                          <div class="col-lg-6 form-group">
                            <select ng-model="country" id="select2" name="select2" class="form-control dirty">
                              <%= options_for_select(COUNTRIES.collect {|k,v| [ v[1], k ] } ) %>
                            </select>
                            <label for="select2">Country</label>
                          </div>
                          <div class="col-lg-3"></div>
                      </div>
                    </div><!--end #tab1 -->
                    <div class="tab-pane" id="tab2">
                      <br><br>
                      <div class="col-lg-3"></div>
                      <div class="col-lg-6 form-group">
                        <div class="card-head">
                          <ul class="card-head nav nav-tabs tabs-accent" data-toggle="tabs">
                            <li ng-class="category=='search' ? 'active' : ''" ng-click="categoryBar('search')"><a  href="#">Search Engines</a></li>
                            <li ng-class="category=='video' ? 'active' : ''" ng-click="categoryBar('video')"><a href="#">Videos</a></li>
                            <li ng-class="category=='store' ? 'active' : ''" ng-click="categoryBar('store')"><a href="#">App Stores</a></li>
                            <li ng-class="category=='qa' ? 'active' : ''" ng-click="categoryBar('qa')"><a href="#">Q & A</a></li>
                            <li ng-class="category=='course' ? 'active' : ''" ng-click="categoryBar('course')"><a href="#">Courses</a></li>
                          </ul>
                        </div>
                      </div>
                      <div class="col-lg-3"></div>
                    </div><!--end #tab2 -->
                    <div class="tab-pane" id="tab3">
                      <br><br>
                      <div class="col-lg-3"></div>
                      <div class="col-lg-6 form-group">
                        <input type="text" name="thetext" id="thetext" class="form-control" ng-model="search_text">
                        <label for="search_text" class="control-label">Keyword</label>
                      </div>                      
                      <div class="col-lg-3"></div>
                    </div><!--end #tab3 -->
                    <div class="tab-pane" id="tab4">
                      <br><br>
                      

                  <div class="row">
                  <div class="col-lg-1"></div>
                  <div class="col-lg-10">

                    <!-- BEGIN PAGE HEADER -->
                    <div class="margin-bottom-xxl">
                      <div class="btn-group btn-group-sm pull-right">
                        <div class="col-sm-16 pull-right">
                          <button ng-click="getClickBoard()" type="button" class="btn ink-reaction btn-raised btn-primary">
                            <i class="md md-content-copy"></i> Copy Clipboard
                          </button>
                          <button type="button" class="btn ink-reaction btn-raised btn-primary" field-separator=";" decimal-separator="." ng-csv="getCsv()" filename="keywords.csv">
                            <i class="md md-file-download"></i> Download
                          </button>
                        </div>
                      </div>
                    </div>                    
                    <!-- END PAGE HEADER -->

                    <!-- BEGIN RESULT LIST -->
                      <table id="resultTable" datatable="" class="table order-column hover dataTable no-footer" dt-options="dtOptions" dt-columns="dtColumns" dt-instance="dtIntanceCallback" >
                      </table>
                    <!--end .table-responsive -->

                    <!-- END RESULTS LIST -->
                  </div><!--end .col -->
                  <div class="col-lg-1"></div>
                </div><!--end .row -->


                    </div><!--end #tab4 -->
                  </div><!--end .tab-content -->
                  <ul class="pager wizard">
                    <li class="previous first disabled"><a class="btn-raised" href="javascript:void(0);">First</a></li>
                    <li class="next"><a ng-click="indexSearch && dtInstance.reloadData(callback_reload)" class="btn-raised" href="javascript:void(0);" >Next</a></li>
                    <!-- ng-click="searchBtn()"  -->
                  </ul>
              </div><!--end #rootwizard -->
              </form>
            </div><!--end .card-body -->
          </div><!--end .card -->
        </div><!--end .col -->
      </div>

    </div><!--end .section-body -->
  </section>

</div><!--end #content-->   